@model IEnumerable<Gift_Card.Models.Product>

@{
    ViewBag.Title = "OrdersDetailsUser";
    Layout = "~/Views/Shared/customdashboard.cshtml";
}

<div class="container">
    <!-- tittle heading -->
    <h4 class="tittle-w3l" align="center">
        <b> Order Details Of @ViewBag.Name</b>

    </h4>
    <hr />
    <!-- //tittle heading -->
    <div class="checkout-right">
        <div class="table-responsive">

            <table class="table">
                <thead>
                    <tr>
                        <th>SL No</th>
                        <th>Product</th>
                        <th>Product Name</th>
                        <th>Qty</th>
                        <th>Price</th>
                        <th>Total Price</th>
                    </tr>
                </thead>

                <tbody>
                    @{

                        int price = 0;
                        int sr = 0;
                        int total_calories = 0;
                        int total_bill = 0;
                        int sum_product;
                        int qty = 0;
                        foreach (var item in Model)
                        {

                            sum_product = 0;
                            qty = qty + item.Product_Quantity;
                            price = price + item.Product_Price;
                            sr = sr + 1;
                            sum_product = item.Product_Price * item.Product_Quantity;
                            total_bill = total_bill + sum_product;
                            String img64 = Convert.ToBase64String(item.Product_img);
                            String img64Url = string.Format("data:image/" + item.Type + ";base64,{0}", img64);


                            <tr class="rem1">
                                <td class="invert">@sr</td>
                                <td class="invert-image">
                                    <a href="single2.html">
                                        <img src="@img64Url" alt=" " class="img-responsive" style="width:50px;height:70px;">
                                    </a>
                                </td>
                                <td class="invert">@item.Product_Name</td>
                                <td class="invert">@item.Product_Quantity</td>
                                <td class="invert">@item.Product_Price RM</td>
                                <td class="invert">@sum_product RM</td>
                            </tr>
                        }
                        <tr style="font-weight: bold;font-size:15px;" class="rem1">

                            <td class="invert" colspan="3">Details</td>

                            <td class="invert">@qty</td>
                            <td class="invert">@price</td>
                            <td class="invert">@total_bill RM</td>
                        </tr>
                        <tr class="rem1">
                            <td colspan="7" class="invert"><h6>Total Bill = RM @total_bill</h6></td>


                        </tr>

                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
<style>
    /* unvisited link */
    #a1:link {
        color: white;
    }

    .a1:link {
        color: white;
    }

    /* visited link */
    #a1:visited {
        color: white;
    }

    /* mouse over link */
    #a1:hover {
        color: white;
    }

    /* selected link */
    #a1:active {
        color: blue;
    }
</style>